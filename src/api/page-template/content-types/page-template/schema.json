{
  "kind": "collectionType",
  "collectionName": "page_templates",
  "info": {
    "singularName": "page-template",
    "pluralName": "page-templates",
    "displayName": "Page Template",
    "description": "Reusable page templates with layout structure"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "layout": {
      "type": "component",
      "repeatable": true,
      "component": "shared.layout-repeater",
      "required": true
    },
    "pages": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::page.page",
      "mappedBy": "page_template",
      "pluginOptions": {
        "content-manager": {
          "visible": false
        }
      }
    },
    "layout_structure": {
      "type": "json"
    }
  }
}