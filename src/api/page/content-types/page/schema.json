{
  "kind": "collectionType",
  "collectionName": "pages",
  "info": {
    "singularName": "page",
    "pluralName": "pages",
    "displayName": "Page",
    "description": "Pages built from templates and sections"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "slug": {
      "type": "uid",
      "targetField": "name",
      "required": true,
      "unique": true
    },
    "page_template": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::page-template.page-template",
      "inversedBy": "pages",
      "required": true
    },
    "sections": {
      "type": "component",
      "repeatable": true,
      "component": "shared.page-section"
    },
    "style": {
      "type": "component",
      "repeatable": false,
      "component": "shared.page-styling-options",
      "required": false
    },
    "tenant_id": {
      "type": "string",
      "pluginOptions": {
        "content-manager": {
          "visible": false
        }
      }
    },
    "layout_structure": {
      "type": "json"
    },
    "parent_page_document_id": {
      "type": "string"
    }
  }
}